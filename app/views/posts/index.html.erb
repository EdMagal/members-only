<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<%= link_to "Post a new thread", new_post_path %>

<h2>THREADS</H2>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %> - 
      <%= link_to post.user.username, post_path(post) if signed_in? %>
    </li>
  <% end %>
</ul>